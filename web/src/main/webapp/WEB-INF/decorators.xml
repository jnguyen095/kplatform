<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/fckeditor**</pattern>
        <pattern>/ajax/**</pattern>
    </excludes>
    <decorator name="customer" page="publish.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="admin" page="adminLayout.jsp">
        <pattern>/admin*</pattern>
        <pattern>/sysadmin*</pattern>
        <pattern>/cashier*</pattern>
        <pattern>/chef*</pattern>
        <pattern>/waiter*</pattern>
    </decorator>
    <decorator name="login" page="loginLayout.jsp">
        <pattern>/login.*</pattern>
    </decorator>
    <decorator name="login" page="loginLayout.jsp">
        <pattern>/**/login.*</pattern>
    </decorator>
</decorators>
